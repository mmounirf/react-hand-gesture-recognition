{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineEnding": "lf"
	},
	"files": {
		"ignoreUnknown": true,
		"include": ["*.ts", "*.tsx", "*.json"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
